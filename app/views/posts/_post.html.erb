<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
  <strong>
  <%= pluralize post.comments.count, "comment" %>
  </strong>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= post.comment %>
  </p>

  <p>
    Posted <%= time_tag post.created_at, "data-local": "time-ago"%>
  </p>

</div>
