<p style="color: green"><%= notice %></p>

<h1 class="font-bold inline-block text-3xl sm:text-3xl bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-cyan-500 mb-8 sm:mb-12">All Posts</h1>

<div id="posts" class="container mx-auto">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
